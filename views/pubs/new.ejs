<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="stylesheet" href="../style.css" />
    </head>
    <body>
        <div class="header">
            <a href="/" class="logo">BeerBuddy</a>
            <div class="header-right">
                <a class="active" href="#home">Home</a>
                <a href="#contact">Contact</a>
                <a href="#about">About</a>
            </div>
        </div>

        <div class="borderForm">
            <h1>Please enter pub information</h1>
            <% let street = ""; let postCode = ""; let suburb = "";
            if(address.address!='undefined') { street = address.address; } else
            { street = "" } if(address.postCode!='undefined') { postCode =
            address.postCode; } else { postCode = "" }
            if(address.suburb!="undefined") { suburb = address.suburb; } else {
            suburb = "" } console.log(address); %> â€‹
            <div class="pubForm">
                <form action="" method="post">
                    <input
                        type="hidden"
                        name="lat"
                        value="<%= address.lat %>"
                    />
                    <input
                        type="hidden"
                        name="long"
                        value="<%= address.long%>"
                    />

                    <label for="pubName">Pub name:</label>
                    <input type="text" name="pubName" />
                    <br />

                    <label for="streetAddress">Street Address:</label>
                    <input
                        type="text"
                        name="streetAddress"
                        value="<%= street%>"
                    />
                    <br />

                    <label for="postCode">Post Code:</label>
                    <input
                        type="text"
                        name="postCode"
                        value="<%= postCode %>"
                    />
                    <br />

                    <label for="suburb">Suburb:</label>
                    <input type="text" name="suburb" value="<%= suburb %>" />

                    <br />
                    <div class="div-form-submit-buttons">
                        <button>Submit Pub and Add Beer Rating</button>
                        <button
                            type="button"
                            onClick="javascript:location.href = '/';"
                        >
                            Return
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="footer">
            <p>&copy; 2020 By: Shailesh, Peter, Tim & Glen</p>
        </div>
        <script></script>
    </body>
</html>
